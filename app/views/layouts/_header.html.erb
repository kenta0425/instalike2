<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "instalike", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li><dl class='searchbox'>
              <%= form_tag root_path, :method => 'get' do %>
                <dt><%= text_field_tag :search, params[:search] %></dt>
                <dd><%= button_tag :name => nil do %>
                  <div class="search-btn"><i class="fas fa-search"></i></div>
                <% end %></dd>
              <% end %>
            </dl></li>
            <li><%= link_to root_path do %><i class="fas fa-home h-icon"></i><% end %></li>
            <li><%= link_to users_path do %><i class="fas fa-users h-icon"></i><% end %></li>
            <li><%= link_to new_post_path do %><i class="far fa-plus-square h-icon"></i><% end %></li>
            <li><%= link_to current_user do %><i class="fas fa-user h-icon"></i><% end %></li>
            <li><%= link_to notifications_path do %><i class="fas fa-bell h-icon"></i><% end %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to root_path do %><i class="fas fa-home h-icon"></i><% end %></li>
          <li><%= link_to current_user do %><i class="fas fa-user h-icon"></i><% end %></li>
          <li><%= link_to "Log in", new_user_session_path %></li>
        <% end %>
          </ul>
        </nav>
      </div>
    </header>